<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/about_About.wrapper">

    <LinearLayout style="@style/about_About.wrapper">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagemEventoAberto"
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:paddingLeft="8dp"
                android:id="@+id/nomeEventoAberto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="30sp" />
        </LinearLayout>

        <View style="@style/about_separator" />

    <LinearLayout
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/apresentadorEventoAberto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:padding="8dp"
            android:text="Apresentador"
            android:textSize="18sp" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingTop="10dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/data1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dataEventoAberto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:fontFamily="@font/roboto"
                android:padding="12dp"
                android:text="Data"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!--<TextView-->
            <!--android:id="@+id/horaInicioEventoAberto"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_weight="9"-->
            <!--android:fontFamily="@font/roboto"-->
            <!--android:padding="12dp"-->
            <!--android:text="Hora"-->
            <!--android:textSize="14sp"-->
            <!--android:textStyle="bold" />-->

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingTop="10dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/local1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/localEventoAberto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:fontFamily="@font/roboto"
                android:padding="12dp"
                android:text="Local"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingTop="10dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/bookmark2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/categoriaEventoAberto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:fontFamily="@font/roboto"
                android:padding="12dp"
                android:text="Setor"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingTop="10dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/info2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/descricaoEventoAberto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:fontFamily="@font/roboto"
                android:padding="12dp"
                android:text="Sobre"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btnGerarQrCode"
            android:background="@drawable/botao"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="estou no local"/>

        <Button
            android:id="@+id/btnLerQrCode"
            android:layout_marginBottom="10dp"
            android:background="@drawable/botao"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="LER QR CODE"/>

        <LinearLayout
            android:id="@+id/about_providers"
            style="@style/about_sub_wrapper"
            android:padding="0dp">

        </LinearLayout>
    </LinearLayout>
</ScrollView>