<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="304dp"
    android:layout_height="124dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/cardHorizontal"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/likeCardLike"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_likered2"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtTituloCardLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/imagemPerfilCard"
            android:fontFamily="@font/roboto_medium"
            android:text="Engenharia de Jogos"
            android:textColor="@color/tituloCardHorizontal"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtHoraCardLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/roboto_bold"
            android:text="HORA"
            android:textColor="@color/fontCardHorizontal"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/txtDataCardLike"
            app:layout_constraintTop_toTopOf="@+id/txtDataCardLike"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtDataCardLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="23dp"
            android:fontFamily="@font/roboto_bold"
            android:text="DATA"
            android:textColor="@color/fontCardHorizontal"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtTituloCardLike"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloCardLike"
            app:layout_constraintVertical_bias="0.06" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>