<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="216dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/cards"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnShare"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/likeIcon"
            app:layout_constraintTop_toTopOf="@+id/likeIcon"
            android:background="@drawable/ic_share"
            android:focusable="false"/>

        <CheckBox
            android:id="@+id/likeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/like_icon"
            android:button="@null"
            android:checked="false"
            android:clickable="true"
            android:focusable="false"
            android:stateListAnimator="@animator/scale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!--<com.like.LikeButton-->
            <!--android:id="@+id/like_button"-->
            <!--android:layout_width="24dp"-->
            <!--android:layout_height="24dp"-->
            <!--android:layout_marginTop="24dp"-->
            <!--android:layout_marginEnd="16dp"-->
            <!--android:layout_marginRight="16dp"-->
            <!--app:icon_size="24dp"-->
            <!--app:icon_type="heart"-->
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent"/>-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagemPerfilCard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="25dp"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtViewNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/imagemPerfilCard"
            android:text="TITULO"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imagemPerfilCard"
            app:layout_constraintTop_toTopOf="@+id/imagemPerfilCard"
            tools:ignore="MissingConstraints" />

        <TextView
            android:text="HORA"
            android:id="@+id/txtViewHoraInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@+id/txtViewData"
            app:layout_constraintTop_toTopOf="@+id/txtViewData"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtViewData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="23dp"
            android:text="DATA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagemPerfilCard"
            app:layout_constraintTop_toBottomOf="@+id/txtViewNome" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>