<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EventosActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCriarEventoPaginaInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar evento" />

        <Button
            android:id="@+id/btnVerPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meu Perfil"
            android:layout_toEndOf="@id/btnConfiguracoes"
            android:layout_toRightOf="@id/btnConfiguracoes" />

        <Button
            android:id="@+id/btnConfiguracoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurações"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_toEndOf="@id/btnCriarEventoPaginaInicial"
            android:layout_toRightOf="@id/btnCriarEventoPaginaInicial" />
    </RelativeLayout>
    <ListView
        android:id="@+id/listViewEventos"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_height="wrap_content"/>


</LinearLayout>