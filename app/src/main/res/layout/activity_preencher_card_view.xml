<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@color/common_google_signin_btn_text_light_disabled"
            android:layout_margin="4dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagemEvento"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tituloEvento"
                android:text="Testando"
                android:layout_toRightOf="@+id/imagemEvento"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descricaoEvento"
                android:text="testando"
                android:layout_toRightOf="@+id/imagemEvento"
                android:layout_below="@+id/tituloEvento"
                />

            <ImageView
                android:id="@+id/image_delete"
                android:layout_width="36dp"
                android:layout_height="48dp"
                android:layout_alignTop="@+id/imagemEvento"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:src="@drawable/ic_delete" />

        </RelativeLayout>

</android.support.v7.widget.CardView>