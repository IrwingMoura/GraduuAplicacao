<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_margin="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagemEvento"
            android:src="@mipmap/ic_launcher_round"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            />

    <TextView
        android:id="@+id/txtViewNome"
        android:text="TITULO_EVENTO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagemEvento"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/txtViewDescricao"
        android:text="DESCRIÇÃO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagemEvento"
        android:layout_below="@id/txtViewNome"/>

    <TextView
        android:id="@+id/txtViewHoraInicio"
        android:text="HORA_INCIO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagemEvento"
        android:layout_below="@id/txtViewDescricao"/>

    <TextView
        android:id="@+id/txtViewHoraFim"
        android:text="TERMINO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagemEvento"
        android:layout_below="@id/txtViewHoraInicio"/>

    <TextView
        android:id="@+id/txtViewData"
        android:text="DATA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagemEvento"
        android:layout_below="@id/txtViewHoraFim"/>

    <TextView
        android:id="@+id/txtViewApresentador"
        android:text="APRESENTADOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagemEvento"
        android:layout_below="@id/txtViewData"/>

    <TextView
        android:id="@+id/txtViewFrequencia"
        android:text="FREQUENCIA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagemEvento"
        android:layout_below="@id/txtViewApresentador"/>

    <TextView
        android:id="@+id/txtViewLocal"
        android:text="LOCAL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagemEvento"
        android:layout_below="@id/txtViewFrequencia"/>

    <TextView
        android:id="@+id/txtViewCategoria"
        android:text="CATEGORIA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagemEvento"
        android:layout_below="@id/txtViewLocal"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>